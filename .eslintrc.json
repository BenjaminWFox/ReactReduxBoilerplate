{
  "env": {
    "browser": true,
    "jest": true,
    "jquery": true
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "compat"
  ],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link", "NavLink" ],
      "specialLink": [ "to" ],
      "aspects": []
    }]
  },
  "settings": {
    "polyfills": ["fetch"]
  }
}